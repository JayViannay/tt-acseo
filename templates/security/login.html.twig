{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="text-white">Log in!</h1>
        <p class="text-secondary">Log in to your account to access your profile and more.</p>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
            {% endif %}
            <form method="post" class="card bg-dark text-white p-4 border-0">
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                        class="form-control bg-secondary text-white" autocomplete="email" required autofocus>
                </div>
                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Password</label>
                    <input type="password" name="password" id="inputPassword"
                        class="form-control bg-secondary text-white" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Sign in
                    </button>
                    <p class="mt-2">If you don't have an account yet, you can <a
                            href="{{ path('app_register') }}" class="text-info">register here</a>.</p>
                </div>
            </form>
        </div>
    </div>
</section>
{% endblock %}