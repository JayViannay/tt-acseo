{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="text-white">Register</h1>
        <p class="text-secondary">Register for an account to access your profile and more.</p>
        {{ form_errors(registrationForm) }}
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white p-4 border-0">
                {{ form_start(registrationForm) }}
                <div class="mb-3">
                    {{ form_label(registrationForm.email) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control bg-secondary text-white'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>
                <div class="mb-3">
                    {{ form_label(registrationForm.plainPassword, 'Password') }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control bg-secondary
                    text-white'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
                <div class="mb-3">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(registrationForm.agreeTerms) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Register</button>
                    <p class="mt-2">If you already have an account, you can <a href="{{ path('app_login') }}"
                            class="text-info">log in here</a>.</p>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}