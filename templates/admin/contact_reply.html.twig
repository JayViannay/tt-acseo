{% extends 'base.html.twig' %}

{% block title %}Reply{% endblock %}

{% block body %}
<section class="container mt-5">
    <div class="text-center mt-3 mb-5">
        <h1 class="text-white">🔐 Reply</h1>
    </div>
    <div class="mt-3">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">{{ contact.fullname }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{ contact.email }}</h6>
            </div>
            <div class="card-body">
                <p class="card-text">{{ contact.question }}</p>
                <p class="card-text text-muted">{{ contact.createdAt|date('D, d M Y H:i') }}</p>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <form action="{{ path('app_admin_contact_reply', { id : contact.id }) }}" method="post">
            <div class="form-group">
                <label for="email">Your answer</label>
                <textarea class="form-control" name="reply" id="reply" rows="3"></textarea>
            </div>
            <div class="mt-2 text-center">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </form>
    </div>
</section>
{% endblock %}